{% block modal %}
	<div class="modal fade" id="{{ modal_image_id }}" tabindex="-1" role="dialog" aria-labelledby="modal-image-header" aria-hidden="true">
		<div class="modal-dialog">
			<div class="modal-content">
				<div class="modal-header">
					<button type="button" class="close" data-dismiss="modal" aria-label="{{ 'Close'|trans }}">
						<span aria-hidden="true">&times;</span>
					</button>
					<h4 class="modal-title" id="modal-image-header">{{ 'Upload file'|trans }} </h4>
				</div>
				<div class="modal-body">
					<form id="upload-file" name="upload-file" class="form-horizontal" action="{{ path(route_image_action) }}" method="post">
						<div class="form-group">
							<label for="file-name" class="col-sm-2 control-label">
								{{ 'File name'|trans }}:
							</label>
							<div class="col-sm-10">
								<input type="text" class="form-control" id="file-name" name="file[name]" placeholder="{{ 'File name'|trans }}"/>
							</div>
						</div>
						<div class="form-group">
							<label for="file-name" class="col-sm-2 control-label">
								{{ 'File'|trans }}:
							</label>
							<div class="col-sm-10">
								<input type="file" class="form-control" id="file" name="file[file]"/>
							</div>
						</div>
						<div class="modal-footer">
							<button type="submit" class="btn btn-primary pull-right col-sm-3" value="Submit" >
								{{ 'Save'|trans }}
							</button>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
{% endblock %}